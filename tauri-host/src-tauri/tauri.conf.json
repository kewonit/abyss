{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "Abyss",
  "version": "0.1.0",
  "identifier": "com.abyss.visualizer",
  "build": {
    "frontendDist": "../../visualizer/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": {
      "script": "npm run dev",
      "cwd": "../../visualizer"
    },
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "../../visualizer"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Abyss â€” Network Visualizer",
        "width": 1366,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://127.0.0.1:9770 ws://localhost:9770 https://www.submarinecablemap.com https://basemaps.cartocdn.com https://*.cartocdn.com https://ipapi.co; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    }
  }
}
